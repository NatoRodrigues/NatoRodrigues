{
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#900",
        "terminalCursor.foreground": "#1ec74e47",
        "editor.selectionBackground": "#ff0000", // Alterado para vermelho
        "editor.findMatchBackground": "#f2d6f788", 
        "editorIndentGuide.activeBackground1": "#ffc400",
        "editorIndentGuide.activeBackground2": "#ffc800",
        "editorIndentGuide.activeBackground3": "#a51283",
        "editorIndentGuide.activeBackground4": "#ff8c00",
        "editorIndentGuide.activeBackground5": "#13a592",
        "editorIndentGuide.activeBackground6": "#ffc400",
        

            // non-active indent guide colors
        "editorIndentGuide.background1": "#0066ff",
        "editorIndentGuide.background2": "#00e5ff",
        "editorIndentGuide.background3": "#00e5ff",
        "editorIndentGuide.background4": "#00e5ff",
        "editorIndentGuide.background5": "#00e5ff",
        "editorIndentGuide.background6": "#00e5ff"
    },  
    "editor.tokenColorCustomizations": {
        
        "keywords": "#e10606",
        "functions": "#fbff00",
        "textMateRules": [
            {
                "scope": "keyword.other.implements.php",
                "settings": {
                    "foreground": "#008cff",
                    "fontStyle": "bold" // Cor para 'implements'
                }
            },
            {
                "scope": "keyword.other.extends.php",
                "settings": {
                    "foreground": "#8d0478",
                    "fontStyle": "strikethrough" // Cor para 'extends'
                }
            },
            {
                "name": "function",
                "scope": "entity.name.function",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#249c06fd"
                }
            },
            {
                "scope": "keyword.other.inherited-class.php",
                "settings": {
                    "foreground": "#FFA500"
                }
            },
            {
                "scope": "keyword.other.implements.php",
                "settings": {
                    "foreground": "#FFA500" 
                }
            },
            {
                "scope": [
                    "support.class.php"
                  ],
                  "settings": {
                    "fontStyle": "bold",
                    "foreground": "#00ffc8"
                  }
            },

            {
                "scope": "keyword.declaration.accessibility.php",
                "settings": {
                    "foreground": "#ffffff" // cor de sua preferência
                }
                
            },
                
            {
                "scope": "keyword",
                "settings": {
                    "foreground": "#00ffc8"
                }
            },

            {
                "name": "$this",
                "scope": 
                    "variable.language.this.php",
                "settings": {
                "foreground": "#ff7a46"
                }

            },
            

            {
                "scope": [
                    "variable.other.global.php",
                    "variable.other.global.python",
                    "variable.other.global.ts",
                    "variable.other.global.js",
                    "variable.other.constant.php",
                    "variable.other.constant.python",
                    "variable.other.constant.ts",
                    "variable.other.constant.js"
                ],
                "settings": {
                    "foreground": "#ffffff" // or any other color you prefer
                }
            },

            {
                "scope": "variable.other.global.php",
                "settings": {
                  "foreground": "#ffffff"
                }
            },

            {
                "name": "Variáveis",
                "scope": [
                    "variable",
                    "meta.definition.variable"
                ],
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#3b2af5d9"
                }
            },

            {
                "name": "Parâmetros",
                "scope": [
                    "variable.parameter",
                    "meta.function.parameters"
                ],
                "settings": {
                    "foreground": "#05fa05"
                }
            },

            {
                "name": "Classes",
                "scope": "entity.name.type.class",
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#00ffc8"
                }
            },
            
            {
                "name": "Métodos",
                "scope": "entity.name.function",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#249c06fd"
                }
            }
            
        ]
    },  
    "phpserver.browser": "firefox",
    "workbench.iconTheme": "eq-material-theme-icons",
    "editor.fontFamily": "'Fira Code'",
    "editor.fontLigatures": true,    //"editor.fontWeight": "300", // Light
    "editor.fontWeight": "400", // Regular
    // "editor.fontWeight": "500", // Medium
    //"editor.fontWeight": "600", // Bold
    "css.enabledLanguages": [
        
        "html"
    ],
    "workbench.settings.applyToAllProfiles": [

    

    ],
    "terminal.integrated.cursorWidth": 20,
    "editor.cursorStyle": "underline",
    "editor.cursorSmoothCaretAnimation": "explicit",
    "terminal.integrated.cursorStyle": "underline",
    "editor.multiCursorPaste": "full",
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "files.autoSave": "afterDelay",
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "tabnine.experimentalAutoImports": true,
    "open-php-html-js-in-browser.selectedBrowser": "Firefox",
    "workbench.colorTheme": "Black Italic",
    "window.zoomLevel": 3,
    "workbench.editor.showTabs": "single",
    "workbench.statusBar.visible": false,
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "workbench.editor.enablePreview": false,
    "remoteHub.uncommittedChangesOnEntry": "none",
    
}   
